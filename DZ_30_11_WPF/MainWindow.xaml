<Window x:Class="DZ_30_11_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DZ_30_11_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Download Manager" Margin="50" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold"></Label>
            <Label Content="enter link:" Margin="10"></Label>
                <TextBox Name="urlTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10"/>
            <Button Name="downloadButton" Content="Download" Width="200" Height="20" Margin="10" Click="downloadButton_Click"></Button>
            <ProgressBar Name="downloadProgressBar" Margin="10 120 10 10" Height="20" Minimum="0" Maximum="100" ></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
